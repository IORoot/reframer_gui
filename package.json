{
  "name": "reframe",
  "version": "1.0.0",
  "description": "AI-powered video reframing tool",
  "author": {
    "name": "Andy Pearson",
    "email": "andy@londonparkour.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:electron": "electron .",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./styles.css --watch",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm-run-all build:*",
    "build:css": "tailwindcss -i ./src/styles.css -o ./styles.css --minify",
    "build:electron": "electron-builder build --mac",
    "build:mac": "npm run clean && npm run build:css && CSC_IDENTITY_AUTO_DISCOVERY=true electron-builder build --mac && node build/notarize.js",
    "build:win": "npm run clean && npm run build:css && electron-builder build --win",
    "build:linux": "npm run clean && npm run build:css && electron-builder build --linux",
    "postinstall": "electron-builder install-app-deps",
    "test:frontend": "playwright test tests/frontend"
  },
  "build": {
    "appId": "com.reframe.app",
    "productName": "Reframe",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": {
      "smartUnpack": true
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "xknob.js",
      "xknob.css",
      "package.json",
      "node_modules/python-shell/**/*",
      "!python",
      "!models",
      "!venv",
      "!dist",
      "!dist/**/*",
      "!**/*.mp4",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": ["**/*.py", "**/*.json", "!**/*.mp4"]
      },
      {
        "from": "requirements.txt",
        "to": "python/requirements.txt"
      }
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 200
        },
        {
          "x": 410,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Reframe"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "electron": "^28.0.0",
    "electron-builder": "^23.6.0",
    "autoprefixer": "^10.4.17",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "python-shell": "^5.0.0"
  }
}
